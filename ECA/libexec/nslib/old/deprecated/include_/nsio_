#ifndef NSIO_H
#define NSIO_H

#include <fstream>
#include <string>
#include <stdio.h>
#include "nsvector"
#include "nsstring"

#define byte unsigned char
#define word unsigned short
#define dword unsigned int
#define qword unsigned long long

// static class for getting file data
class file {
private:
    file() {}
public:
    static string ReadAllText(string);
    static vector<string> ReadAllLines(string);
    static vector<byte> ReadAllBytes(string);

    static void WriteAllText(string, string);
    static void WriteAllLines(string, vector<string>);
    static void WriteAllBytes(string, vector<byte>);
};

#endif
